&spic {
	status = "okay";
};

/*
&storage_partition {
  reg = <0x00250000 DT_SIZE_K(256)>;
};
*/

&flash0 {
  partitions {
    demo_storage_partition: partition@300000 {
      label = "demo-storage";
      reg = <0x00300000 DT_SIZE_K(256)>;
    };
  };
};

/ {
  fstab {
    compatible = "zephyr,fstab";
    lfs1: lfs1 {
      compatible = "zephyr,fstab,littlefs";
      read-size = < 0x1 >;
      prog-size = < 0x1 >;
      cache-size = < 0x100 >;
      lookahead-size = < 0x8 >;
      block-cycles = < 0x200 >;
      partition = <&demo_storage_partition>;
      mount-point = "/lfs1";
      automount;
    };
  };
};
